@model HomeLoginViewModel


@{
    ViewBag.Title = "Login Staff";
}

<form enctype="multipart/form-data" asp-controller="home" asp-action="login" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

   

    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label asp-for="Password" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Password" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>




    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Click</button>
        </div>
    </div>





    <div asp-validation-summary="All" class="text-danger">
    </div>
</form>


